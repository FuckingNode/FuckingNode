{
    "name": "@zakahacecosas/fuckingnode",
    "version": "5.0.0-dev.2",
    "exports": {
        ".": "./src/main.ts"
    },
    "fmt": {
        "indentWidth": 4,
        "lineWidth": 145,
        "proseWrap": "never",
        "singleQuote": false,
        "semiColons": true,
        "useTabs": false,
        "exclude": ["src/commands/toolkit/setups/**"],
        "useBraces": "whenNotSingleLine",
        "typeLiteral.separatorKind": "semiColon",
        "trailingCommas": "onlyMultiLine",
        "spaceSurroundingProperties": true,
        "spaceAround": false,
        "singleBodyPosition": "sameLine",
        "quoteProps": "consistent",
        "operatorPosition": "nextLine",
        "newLineKind": "lf",
        "bracePosition": "sameLine"
    },
    "lint": {
        "include": ["src/"],
        "rules": {
            "tags": ["recommended"],
            "include": [
                "ban-ts-comment",
                "adjacent-overload-signatures",
                "ban-types",
                "ban-untagged-ignore",
                "eqeqeq",
                "require-await",
                "ban-untagged-todo",
                "ban-unknown-rule-code",
                "ban-unused-ignore",
                "constructor-super",
                "default-param-last",
                "explicit-function-return-type",
                "explicit-module-boundary-types",
                "for-direction",
                "getter-return",
                "guard-for-in",
                "require-yield",
                "verbatim-module-syntax",
                "valid-typeof",
                "use-isnan",
                "triple-slash-reference",
                "single-var-declarator",
                "no-var",
                "prefer-as-const",
                "no-invalid-regexp",
                "no-invalid-triple-slash-reference",
                "no-array-constructor",
                "no-async-promise-executor",
                "no-await-in-sync-fn",
                "no-case-declarations",
                "no-class-assign",
                "no-compare-neg-zero",
                "no-cond-assign",
                "no-const-assign",
                "no-constant-condition",
                "no-control-regex",
                "no-debugger",
                "no-delete-var",
                "no-deprecated-deno-api",
                "no-dupe-args",
                "no-dupe-class-members",
                "no-dupe-else-if",
                "no-dupe-keys",
                "no-duplicate-case",
                "no-empty",
                "no-empty-character-class",
                "no-empty-enum",
                "no-empty-interface",
                "no-empty-pattern",
                "no-fallthrough",
                "no-misused-new",
                "no-unused-vars",
                "no-unused-labels",
                "no-unsafe-negation",
                "no-unsafe-finally",
                "no-unreachable",
                "no-undef",
                "no-shadow-restricted-names",
                "no-sloppy-imports",
                "no-redeclare",
                "no-extra-boolean-cast",
                "no-extra-non-null-assertion",
                "prefer-const",
                "no-sparse-arrays",
                "no-self-assign",
                "no-self-compare",
                "no-octal",
                "no-setter-return",
                "no-regex-spaces",
                "no-irregular-whitespace",
                "no-func-assign",
                "no-import-assign",
                "no-import-assertions",
                "no-obj-calls"
            ]
        }
    },
    "tasks": {
        "good": {
            "description": "Makes the code good by formatting and type-checking it.",
            "command": "deno -A tasks/good.ts"
        },
        "precommit": {
            "description": "Formats, type-checks, and tests the code.",
            "dependencies": ["good", "test"]
        },
        "compile": {
            "description": "Compiles the CLI.",
            "command": "deno -A tasks/compile.ts",
            "dependencies": ["good", "test"]
        },
        "test": {
            "description": "Runs all tests.",
            "command": "deno test --allow-all"
        },
        "benchmark": {
            "description": "Runs all benchmarks.",
            "command": "deno -A src/bench/task.ts"
        }
    },
    "compilerOptions": {
        "strict": true,
        "strictBindCallApply": true,
        "strictBuiltinIteratorReturn": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noErrorTruncation": true,
        "noUnusedLocals": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedParameters": true,
        "noPropertyAccessFromIndexSignature": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "useUnknownInCatchVariables": true,
        "exactOptionalPropertyTypes": true
    },
    "imports": {
        "@std/datetime": "jsr:@std/datetime@^0.225.5",
        "@std/fmt": "jsr:@std/fmt@^1.0.8",
        "@std/fs": "jsr:@std/fs@^1.0.19",
        "@std/jsonc": "jsr:@std/jsonc@^1.0.2",
        "@std/path": "jsr:@std/path@^1.1.2",
        "@std/yaml": "jsr:@std/yaml@1.0.9",
        "@std/toml": "jsr:@std/toml@^1.0.9",
        "@std/semver": "jsr:@std/semver@1.0.5",
        "@std/assert": "jsr:@std/assert@^1.0.14",
        "@zakahacecosas/string-utils": "jsr:@zakahacecosas/string-utils@^3.4.0",
        "typescript": "npm:typescript@^5.9.2"
    },
    "lock": {
        "path": "deno.lock"
    }
}
